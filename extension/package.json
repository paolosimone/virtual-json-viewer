{
  "name": "virtual-json-viewer",
  "version": "1.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "yarn prettier --write .",
    "fix": "yarn format && yarn tsc --noEmit && yarn eslint --fix",
    "dev": "yarn vite",
    "bump": "yarn upgrade --latest",
    "build:chrome": "yarn tsx vite.build.ts chrome",
    "build:firefox": "yarn tsx vite.build.ts firefox",
    "package:chrome": "yarn build:chrome && cd dist/chrome && zip ../virtual-json-viewer-v$npm_package_version-chrome.zip -r .",
    "package:firefox": "yarn build:firefox && cd dist/firefox && zip ../virtual-json-viewer-v$npm_package_version-firefox.zip -r .",
    "package:src": "cd .. && git archive -o extension/virtual-json-viewer-v$npm_package_version-src.zip HEAD README.md extension",
    "package:all": "yarn package:chrome && yarn package:firefox && yarn package:src",
    "clean": "rm -rf dist/ virtual-*.zip"
  },
  "dependencies": {
    "anchorme": "^3.0.8",
    "json-stable-stringify": "^1.2.1",
    "react": "^19.1.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.1.0",
    "react-vtree": "3.0.0-beta.3",
    "react-window": "^1.8.11",
    "uid": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.4",
    "@types/chrome": "^0.0.315",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.1.2",
    "@types/react-window": "^1.8.8",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-react": "^4.4.1",
    "classnames": "^2.5.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.2"
  }
}
