{
  "name": "virtual-json-viewer",
  "version": "1.3.0",
  "private": true,
  "scripts": {
    "type": "yarn tsc --noEmit",
    "dev": "yarn type && yarn vite",
    "format": "yarn prettier --write .",
    "bump": "yarn upgrade --latest",
    "build:chrome": "yarn tsx vite.build.ts chrome",
    "build:firefox": "yarn tsx vite.build.ts firefox",
    "package:chrome": "yarn build:chrome && cd dist_chrome && zip ../virtual-json-viewer-v$npm_package_version-chrome.zip -r .",
    "package:firefox": "yarn build:firefox && cd dist_firefox && zip ../virtual-json-viewer-v$npm_package_version-firefox.zip -r .",
    "package:src": "cd .. && git archive -o extension/virtual-json-viewer-v$npm_package_version-src.zip HEAD README.md extension",
    "package:all": "yarn package:chrome && yarn package:firefox && yarn package:src"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "anchorme": "^3.0.8",
    "json-stable-stringify": "^1.2.1",
    "react": "^19.0.0",
    "react-app-rewired": "^2.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.0.0",
    "react-vtree": "3.0.0-beta.3",
    "react-window": "^1.8.11",
    "uid": "^2.0.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@types/chrome": "^0.0.300",
    "@types/jest": "^29.5.14",
    "@types/json-stable-stringify": "^1.2.0",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.0.3",
    "@types/react-window": "^1.8.8",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "copy-webpack-plugin": "12.0.2",
    "customize-cra": "^1.0.0",
    "modify-source-webpack-plugin": "^4.1.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "webextensions": true
    }
  },
  "eslintIgnore": [
    "/public/js/*.js",
    "**/vendor/*.js"
  ],
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
